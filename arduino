// ìˆ˜ì •ëœ Arduino ì½”ë“œ: ë°©í–¥ ë¬¸ì œ í•´ê²°

#define DIR_X 2      // Xì¶• ë°©í–¥ (CW+)
#define STEP_X 3     // Xì¶• ìŠ¤í… (CLK+)
#define EN_X 6       // Xì¶• í™œì„±í™” (EN+)

#define DIR_Y 4      // Yì¶• ë°©í–¥ (CW+)
#define STEP_Y 5     // Yì¶• ìŠ¤í… (CLK+)
#define EN_Y 7       // Yì¶• í™œì„±í™” (EN+)

#define STEP_DELAY 800  // ìŠ¤í… ë”œë ˆì´ (ë§ˆì´í¬ë¡œì´ˆ)

void setup() {
  pinMode(DIR_X, OUTPUT);  pinMode(STEP_X, OUTPUT);  pinMode(EN_X, OUTPUT);
  pinMode(DIR_Y, OUTPUT);  pinMode(STEP_Y, OUTPUT);  pinMode(EN_Y, OUTPUT);

  digitalWrite(EN_X, HIGH);  // ê¸°ë³¸ì€ ë¹„í™œì„±í™”
  digitalWrite(EN_Y, HIGH);

  Serial.begin(9600);
  Serial.println("[Arduino] READY");
  Serial.flush(); // ì¦‰ì‹œ ì¶œë ¥
}

void loop() {
  if (Serial.available()) {
    String cmd = Serial.readStringUntil('\n');
    cmd.trim();

    if (cmd == "HOME") {
      Serial.println("[Arduino] HOMING triggered");
      Serial.flush();
      return;
    }

    int dix = -1, diy = -1;
    long stx = 0, sty = 0;

    int i1 = cmd.indexOf(',');
    int i2 = cmd.indexOf(',', i1 + 1);
    int i3 = cmd.indexOf(',', i2 + 1);

    if (i1 > 0 && i2 > i1 && i3 > i2) {
      dix = cmd.substring(0, i1).toInt();
      diy = cmd.substring(i1 + 1, i2).toInt();
      stx = cmd.substring(i2 + 1, i3).toInt();
      sty = cmd.substring(i3 + 1).toInt();

      // ë°©í–¥ ë°˜ì „: í•„ìš” ì‹œ 1 - ê°’
      dix = 1 - dix;  // Xì¶• ë°©í–¥ ë°˜ì „
      diy = 1 - diy;  // Yì¶• ë°©í–¥ ë°˜ì „

      Serial.print("[Arduino] Parsed: Xdir="); Serial.print(dix);
      Serial.print(" Ydir="); Serial.print(diy);
      Serial.print(" Xstep="); Serial.print(stx);
      Serial.print(" Ystep="); Serial.println(sty);
      Serial.flush();

      moveMotor(DIR_X, STEP_X, EN_X, dix, stx);
      delay(300);
      moveMotor(DIR_Y, STEP_Y, EN_Y, diy, sty);
    } else {
      Serial.print("[Arduino] Parse error: "); Serial.println(cmd);
      Serial.flush();
    }
  }
}

void moveMotor(int dirPin, int stepPin, int enPin, bool direction, long steps) {
  digitalWrite(enPin, LOW);             // ë“œë¼ì´ë²„ í™œì„±í™”
  digitalWrite(dirPin, direction);      // ë°©í–¥ ì„¤ì •

  for (long i = 0; i < steps; i++) {
    digitalWrite(stepPin, HIGH);
    delayMicroseconds(STEP_DELAY);
    digitalWrite(stepPin, LOW);
    delayMicroseconds(STEP_DELAY);
  }

  digitalWrite(enPin, HIGH);            // ë“œë¼ì´ë²„ ë¹„í™œì„±í™”
}


// ìˆ˜ì • ì•„ë‘ì´ë…¸

#define DIR_X 2
#define STEP_X 3
#define EN_X 6

#define DIR_Y 4
#define STEP_Y 5
#define EN_Y 7

#define STEP_DELAY 800

bool ready_for_command = false;
String input = "";

void setup() {
  pinMode(DIR_X, OUTPUT);  pinMode(STEP_X, OUTPUT);  pinMode(EN_X, OUTPUT);
  pinMode(DIR_Y, OUTPUT);  pinMode(STEP_Y, OUTPUT);  pinMode(EN_Y, OUTPUT);

  digitalWrite(EN_X, HIGH);
  digitalWrite(EN_Y, HIGH);

  Serial.begin(9600);
  delay(2000);
  Serial.println("[Arduino] READY");
  ready_for_command = true;
}

void loop() {
  if (!ready_for_command) return;

  while (Serial.available()) {
    char c = Serial.read();
    if (c == '\n') {
      input.trim();
      if (input.length() >= 7) {
        ready_for_command = false;  // ğŸ”’ ëª…ë ¹ ì²˜ë¦¬ ì§„ì…
        processCommand(input);
        input = "";

        // ğŸ§¹ ì‹œë¦¬ì–¼ ë²„í¼ ì™„ì „ ì •ë¦¬
        while (Serial.available()) Serial.read();

        ready_for_command = true;  // ğŸ”“ ë‹¤ìŒ ëª…ë ¹ ëŒ€ê¸°
      } else {
        Serial.println("[Arduino] Invalid input (too short)");
        input = "";
      }
    } else {
      input += c;
    }
  }
}

void processCommand(String cmd) {
  if (cmd == "HOME") {
    Serial.println("[Arduino] HOMING triggered");
    return;
  }

  int dix = -1, diy = -1;
  long stx = 0, sty = 0;

  int i1 = cmd.indexOf(',');
  int i2 = cmd.indexOf(',', i1 + 1);
  int i3 = cmd.indexOf(',', i2 + 1);

  if (i1 > 0 && i2 > i1 && i3 > i2 && i3 < cmd.length() - 1) {
    dix = cmd.substring(0, i1).toInt();
    diy = cmd.substring(i1 + 1, i2).toInt();
    stx = cmd.substring(i2 + 1, i3).toInt();
    sty = cmd.substring(i3 + 1).toInt();

    Serial.print("[Arduino] Received: ");
    Serial.println(cmd);
    Serial.print("[Arduino] Parsed: Xdir="); Serial.print(dix);
    Serial.print(" Ydir="); Serial.print(diy);
    Serial.print(" Xstep="); Serial.print(stx);
    Serial.print(" Ystep="); Serial.println(sty);

    moveMotor(DIR_X, STEP_X, EN_X, dix, stx);
    delay(100);
    moveMotor(DIR_Y, STEP_Y, EN_Y, diy, sty);
    delay(100);

    Serial.println("DONE");

  } else {
    Serial.print("[Arduino] Parse error: ");
    Serial.println(cmd);
  }
}

void moveMotor(int dirPin, int stepPin, int enPin, bool direction, long steps) {
  digitalWrite(enPin, LOW);
  digitalWrite(dirPin, direction);

  for (long i = 0; i < steps; i++) {
    digitalWrite(stepPin, HIGH);
    delayMicroseconds(STEP_DELAY);
    digitalWrite(stepPin, LOW);
    delayMicroseconds(STEP_DELAY);
  }

  digitalWrite(enPin, HIGH);
}
